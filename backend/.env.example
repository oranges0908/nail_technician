# 应用配置
APP_NAME=Nail
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
# 开发环境推荐使用 SQLite（无需额外配置）
DATABASE_URL=sqlite:///./nail.db
# 生产环境推荐使用 PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/nail_db
# 或使用 MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/nail_db

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 文件上传
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# AI Provider 配置
AI_PROVIDER=openai
# ⚠️ 必须设置你的 OpenAI API Key（从 https://platform.openai.com/api-keys 获取）
OPENAI_API_KEY=sk-your-openai-api-key-here

# 日志配置
LOG_LEVEL=INFO
