# 应用配置
APP_NAME=Nail
APP_VERSION=1.0.0
# 开发环境设为 True，生产环境必须设为 False
DEBUG=True
API_V1_PREFIX=/api/v1

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
# 开发环境推荐使用 SQLite（无需额外配置）
DATABASE_URL=sqlite:///./nail.db
# 生产环境推荐使用 PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/nail_db
# 或使用 MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/nail_db

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT 配置
# ⚠️ 必须设置为强随机密钥，生成方式: openssl rand -hex 32
# 切勿使用默认值或弱密钥，否则应用启动将失败
SECRET_KEY=（在此粘贴 openssl rand -hex 32 的输出）
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:9000

# 文件上传
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# AI Provider 配置
AI_PROVIDER=openai
# ⚠️ 必须设置你的 OpenAI API Key（从 https://platform.openai.com/api-keys 获取）
OPENAI_API_KEY=sk-your-openai-api-key-here

# 日志配置
LOG_LEVEL=INFO
